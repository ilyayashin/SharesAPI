@model SharesAPI.Models.Shares
@{
    ViewBag.Title = "Удаление Группы";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.ShareName)
        </dd>

        <dt>Группа</dt>
        <dd>
            @Html.DisplayFor(model => model.Groups.GroupName)
        </dd>
    </dl>
    <br>
    <div>
        <form asp-controller="Home" asp-action="DeleteShares" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>