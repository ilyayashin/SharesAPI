@model SharesAPI.Models.Groups
@{
    ViewBag.Title = "Редактирование Группы";
}
<form asp-action="EditGroups" asp-controller="home" asp-route-GroupId="@Model.GroupId">
    <div class="form-group">
        <label asp-for="GroupName" class="control-label">Название акции</label>
        <input type="text" asp-for="GroupName" value="@Model.GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>