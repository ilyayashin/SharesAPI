@model SharesAPI.Models.Shares
@{
    ViewBag.Title = "Редактирование акции";
}
<form asp-action="EditShares" asp-controller="home" asp-route-ShareId="@Model.ShareId">
    <div class="form-group">
        <label asp-for="ShareName" class="control-label">Название акции</label>
        <input type="text" asp-for="ShareName" value="@Model.ShareName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="GroupsGroupId">Группа</label>
        <select asp-for="GroupsGroupId" asp-items="ViewBag.Groups"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>